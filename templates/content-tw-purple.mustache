<div class="tw-flex tw-items-center tw-mb-16 tw-w-full">
    <div class="tw-flex tw-relative tw-bg-white tw-shadow-lg tw-w-64 tw-h-96 tw-rounded-2xl tw-overflow-hidden tw-p-4 tw-pr-16" style="border: 10px">
        <div class="tw-bg-purple-300/25 tw-rounded-full tw-h-96 tw-w-96 -tw-ml-32 -tw-mt-32 tw-absolute">
        </div>
        {{#academic}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M12 14l9-5-9-5-9 5 9 5z" />
            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
        </svg>
        {{/academic}}
        {{#collection}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        {{/collection}}
        {{#cursor}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />
        </svg>
        {{/cursor}}
        {{#forward}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.933 12.8a1 1 0 000-1.6L6.6 7.2A1 1 0 005 8v8a1 1 0 001.6.8l5.333-4zM19.933 12.8a1 1 0 000-1.6l-5.333-4A1 1 0 0013 8v8a1 1 0 001.6.8l5.333-4z" />
        </svg>
        {{/forward}}
        {{#globe}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {{/globe}}
        {{#library}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
        </svg>
        {{/library}}
        {{#presentation}}
        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-24 tw-absolute tw-text-purple-300/75 tw-right-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
        </svg>
        {{/presentation}}
        <div class="tw-flex tw-flex-col tw-space-y-4 tw-w-full z-index-[3]">
            <h3 class="tw-text-xl tw-text-slate-700 tw-font-bold tw-z-[3]">{{ title }}</h3>
            <p class="tw-text-md tw-text-slate-600 tw-flex-grow">{{ desc }}</p>
            {{#link}}
            <a href="" class="tw-w-full tw-bg-purple-500 hover:tw-bg-purple-600 hover:tw-shadow-lg tw-text-md tw-py-2 tw-px-4 tw-rounded-lg tw-text-purple-50 hover:tw-text-white tw-flex tw-justify-between tw-items-center tw-transform tw-ease-in-out tw-duration-200">
                <span>Lihat semua</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-5 tw-w-5 tw-rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
            </a>
            {{/link}}
        </div>
    </div>
    <div class="-tw-ml-8 tw-w-full">
        <section class="splide" aria-label="Splide Basic HTML Example">
            <div class="splide__track">
                <ul class="splide__list">
                    {{#courses}}
                    <li class="splide__slide">
                        <div class="tw-flex tw-flex-col tw-bg-white tw-h-80 tw-rounded-lg tw-shadow-md tw-my-2 tw-overflow-hidden">
                            <img class="tw-aspect-video tw-bg-slate-100" src="{{ image_url }}" alt="{{course_name}}">
                            <div class="tw-p-3 tw-flex tw-flex-col tw-space-y-4 tw-flex-grow">
                                <h3 class="tw-text-md tw-line-clamp-2 tw-h-10">{{ course_name }}</h3>
                                <div class="tw-space-y-2">
                                    <div class="tw-flex tw-text-sm tw-space-x-2 tw-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-5 tw-w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                        <span>12.567</span>
                                    </div>
                                    <div class="tw-flex tw-text-sm tw-space-x-2 tw-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-5 tw-w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                                        </svg>
                                        <span>{{ category }}</span>
                                    </div>
                                    <div class="tw-flex tw-text-sm tw-space-x-2 tw-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-5 tw-w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        {{#has_jp}}
                                        <span class="tw-bg-teal-500 tw-text-teal-50 tw-px-1.5 tw-rounded-lg">1 JP</span>
                                        {{/has_jp}}
                                        {{#no_jp}}
                                        <span class="tw-bg-red-400 tw-text-red-50 tw-px-1.5 tw-rounded-lg">Non JP</span>
                                        {{/no_jp}}
                                    </div>
                                </div>
                                <a href="{{url}}" class="tw-bg-slate-100 tw-text-md tw-text-slate-500 tw-flex tw-space-x-2 tw-items-center tw-py-1 tw-px-2 tw-rounded-lg tw-justify-center hover:tw-bg-slate-200 hover:tw-text-slate-700 group hover:tw-shadow-md tw-transform tw-ease-in-out tw-duration-200">
                                    <span>Lihat</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-5 tw-w-5 tw-rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </li>
                    {{/courses}}
                </ul>
            </div>
            <div class="splide__arrows">
                <svg xmlns="http://www.w3.org/2000/svg" class="splide__arrow splide__arrow--prev tw-h-6 -tw-ml-8 tw-mt-24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="splide__arrow splide__arrow--next tw-h-6 -tw-mr-8 tw-mt-24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
            </div>
        </section>
    </div>
</div>